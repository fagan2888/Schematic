<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SJP.Schematic.Core\SJP.Schematic.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Scriban" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Html\Templates\*.scriban" />
    <EmbeddedResource Include="assets\**\*.*" />
  </ItemGroup>

  <Target Name="NpmClean" BeforeTargets="BeforeClean">
    <Exec Command="npm install" WorkingDirectory="$(MSBuildThisFileDirectory)" />
    <Exec Command="npm run clean" WorkingDirectory="$(MSBuildThisFileDirectory)" />
  </Target>

  <Target Name="NpmBuild" BeforeTargets="BeforeBuild">
    <Exec Command="npm install" WorkingDirectory="$(MSBuildThisFileDirectory)" />
    <Exec Command="npm run build" WorkingDirectory="$(MSBuildThisFileDirectory)" />
  </Target>

</Project>
