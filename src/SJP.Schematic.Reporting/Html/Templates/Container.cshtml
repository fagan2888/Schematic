@using RazorLight
@using SJP.Schematic.Reporting.Html.ViewModels
@inherits TemplatePage<Container>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>@Model.DatabaseName</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="@(Model.RootPath)css/reporting-app.css">
</head>
<body class="hold-transition skin-blue layout-top-nav">
<div class="wrapper">
  <header class="main-header">
    <nav class="navbar navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <a href="@(Model.RootPath)index.html" class="navbar-brand"><b>@Model.DatabaseName</b></a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <i class="fa fa-bars"></i>
          </button>
        </div>
        <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="@(Model.RootPath)index.html">Overview</a></li>
            <li><a href="@(Model.RootPath)columns.html" title="All of the columns in the schema">Columns</a></li>
            <li><a href="@(Model.RootPath)constraints.html" title="Useful for diagnosing error messages that just give a constraint name or number">Constraints</a></li>
            <li><a href="@(Model.RootPath)indexes.html" title="Useful for diagnosing error messages that just give an index name or number">Indexes</a></li>
            <li><a href="@(Model.RootPath)relationships.html" title="Diagram of table relationships">Relationships</a></li>
            <li><a href="@(Model.RootPath)orphans.html" title="Tables with neither parents nor children">Orphan&nbsp;Tables</a></li>
            <li><a href="@(Model.RootPath)lint.html" title="Potential issues detected in the database">Lint</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="content-wrapper">
    @Model.Content
  </div>
  <footer class="main-footer">
    <div>
      <div class="pull-right hidden-xs">
        <a href="https://github.com/sjp/Schematic" title="GitHub for Schematic"><i class="fa fa-github-square fa-2x"></i></a>
      </div>
      <strong>Generated by <a href="https://github.com/sjp/Schematic" class="logo-text"><i class="fa fa-database"></i> Schematic @Model.ProjectVersion</a></strong>
    </div>
  </footer>
</div>
<script src="@(Model.RootPath)js/viz.js"></script>
<script src="@(Model.RootPath)js/full.render.js"></script>
<script src="@(Model.RootPath)js/reporting-app.js"></script>
</body>
</html>
