@using RazorLight
@using SJP.Schematic.Reporting.Html.ViewModels
@inherits TemplatePage<Synonyms>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Synonyms</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Synonyms</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa fa-share">&nbsp;&nbsp;</i>Synonyms</h3>
                </div>
                <div class="card-body">
                    <table class="@Raw(Model.SynonymsTableClass.ToHtmlString()) table table-bordered table-hover" role="grid">
                        <thead>
                            <tr>
                                <th>Synonym</th>
                                <th>Target</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SynonymsCount > 0)
                            {
                                foreach (var synonym in Model.AllSynonyms)
                                {
                                    <tr class="tbl even">
                                        <td><a href="synonyms/@(synonym.SynonymUrl).html">@synonym.Name</a></td>
                                        <td>@Raw(synonym.TargetText.ToHtmlString())</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="tbl even">
                                    <td colspan="2">No synonyms present.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>