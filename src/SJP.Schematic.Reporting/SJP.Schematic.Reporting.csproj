<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>

    <PreserveCompilationContext>true</PreserveCompilationContext>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SJP.Schematic.Core\SJP.Schematic.Core.csproj" />
    <ProjectReference Include="..\SJP.Schematic.Lint\SJP.Schematic.Lint.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="1.50.5" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.1.1" />
    <PackageReference Include="RazorLight" Version="2.0.0-beta1" />
    <PackageReference Include="Scriban" Version="1.2.5" />
    <PackageReference Include="System.Text.Encodings.Web" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Html\Templates\*.scriban" />
    <EmbeddedResource Include="Html\Templates\*.cshtml" />
    <EmbeddedResource Include="assets\**\*.*" />
  </ItemGroup>

  <Target Name="NpmClean" BeforeTargets="BeforeClean">
    <Exec Command="npm install" WorkingDirectory="$(MSBuildThisFileDirectory)" />
    <Exec Command="npm run clean" WorkingDirectory="$(MSBuildThisFileDirectory)" />
  </Target>

  <Target Name="NpmBuild" BeforeTargets="BeforeBuild">
    <Exec Command="npm install" WorkingDirectory="$(MSBuildThisFileDirectory)" />
    <Exec Command="npm run build" WorkingDirectory="$(MSBuildThisFileDirectory)" />
  </Target>

</Project>
